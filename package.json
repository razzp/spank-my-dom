{
  "name": "spank-my-dom",
  "version": "0.1.0",
  "description": "A small, modular set of DOM utilities",
  "license": "MIT",
  "main": "./dist/main.js",
  "exports": "./dist/main.js",
  "types": "./types/main.d.ts",
  "scripts": {
    "prebuild": "npm run lint && npm run prettier",
    "build": "rimraf dist && rollup --config && npm run types",
    "watch": "rollup --watch --config",
    "lint": "eslint --fix src/** tests/**",
    "prettier": "prettier --list-different --write *.js docs/**/*.js src/** tests/**",
    "types": "rimraf types && tsc --project tsconfig.types.json",
    "test": "jest --verbose --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.2"
  }
}
