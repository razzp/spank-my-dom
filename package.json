{
    "name": "spank-my-dom",
    "author": "Robert Wells",
    "version": "2.4.0",
    "description": "A tiny, modular set of DOM utilities, written in TypeScript.",
    "keywords": [
        "html",
        "dom",
        "javascript",
        "typescript",
        "utilities",
        "helpers"
    ],
    "license": "MIT",
    "bugs": "https://github.com/razzp/spank-my-dom/issues",
    "homepage": "https://github.com/razzp/spank-my-dom#readme",
    "repository": "github:razzp/spank-my-dom",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/spank-my-dom.cjs",
    "module": "./dist/spank-my-dom.js",
    "exports": {
        ".": {
            "import": "./dist/spank-my-dom.js",
            "require": "./dist/spank-my-dom.cjs"
        }
    },
    "types": "./dist/spank-my-dom.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run biome && rimraf dist && rollup --config && npm run types",
        "types": "rimraf types && tsc --project tsconfig.types.json && api-extractor run --local --verbose",
        "test": "jest",
        "docs": "api-documenter markdown --input-folder temp --output-folder docs",
        "biome": "biome check --write",
        "release": "release-it"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.2",
        "@microsoft/api-documenter": "^7.27.3",
        "@microsoft/api-extractor": "^7.53.3",
        "@rollup/plugin-typescript": "^12.3.0",
        "@types/jest": "^30.0.0",
        "@types/jsdom": "^27.0.0",
        "bossy-boots": "^1.1.1",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jsdom": "^27.1.0",
        "release-it": "^19.0.5",
        "rimraf": "^6.1.0",
        "rollup": "^4.52.5",
        "ts-jest": "^29.4.5",
        "typescript": "~5.9.3"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    }
}
